# Database
DATABASE_URL=postgresql://nodus:nodus_dev_password@postgres:5432/nodus

# Redis
REDIS_URL=redis://redis:6379/0

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio:9000

# Qdrant (Vector DB)
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# Google ADK
ADK_MODEL=gemini-2.0-flash-exp
ADK_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=

# Backoffice
BACKOFFICE_URL=http://backoffice:5001

# MCP Gateway
MCP_GATEWAY_URL=http://mcp-gateway:7443

# ADK Runtime
ADK_RUNTIME_URL=http://adk-runtime:8080

# Logging
LOG_LEVEL=INFO

# Node Environment
NODE_ENV=development

# ============================================================================
# Observability: Langfuse + OpenTelemetry
# ============================================================================

# Langfuse Authentication (change in production!)
# Generate a strong random 64-character string for production
LANGFUSE_SECRET_KEY=langfuse_dev_secret_change_in_production_to_random_64_chars

# Langfuse API Credentials (generated after first login to Langfuse UI)
# Steps to get keys:
# 1. Start services: ./dev up
# 2. Access Langfuse: http://localhost:3000
# 3. Create account (first user is admin)
# 4. Create project "nodus-adk"
# 5. Settings → API Keys → Create new
# 6. Copy keys here and restart adk-runtime
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY_API=

# Langfuse Host (internal Docker network)
LANGFUSE_HOST=http://langfuse:3000

# Enable Langfuse integration
LANGFUSE_ENABLED=true

# OpenTelemetry Configuration
# OTLP endpoint (points to Langfuse ingestion)
OTEL_EXPORTER_OTLP_ENDPOINT=http://langfuse:3000/api/public/ingestion

# Service identification
OTEL_SERVICE_NAME=nodus-adk-runtime

# Trace sampling (1.0 = 100%, 0.1 = 10%)
# Use lower values in production to reduce overhead
OTEL_TRACES_SAMPLER=parentbased_traceidratio
OTEL_TRACES_SAMPLER_ARG=1.0

# Enable/disable message content capture in spans
# Set to false in production if you have PII concerns
ADK_CAPTURE_MESSAGE_CONTENT_IN_SPANS=true

# CORS Origins (include Langfuse UI)
CORS_ORIGINS=http://localhost:5002,http://localhost:5001,http://localhost:3000

# API Keys (for AI models)
GOOGLE_API_KEY=
OPENAI_API_KEY=


